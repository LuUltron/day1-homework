entities:

# The `ControlSystem` entity can call `LightsGPIO`.
- name: traffic_light.ControlSystem
  connections:
  - target: traffic_light.LightsGPIO
    id: lights_gpio_connection
@INIT_ControlSystem_ENTITY_CONNECTIONS@

# The `LightsGPIO` entity can call `DiagnosticSystem`.
- name: traffic_light.LightsGPIO
  connections:
  - target: traffic_light.DiagnosticSystem
    id: diagnostic_system_connection
@INIT_LightsGPIO_ENTITY_CONNECTIONS@

# The `DiagnosticSystem` entity can call `ControlSystem`.
- name: traffic_light.DiagnosticSystem
@INIT_DiagnosticSystem_ENTITY_CONNECTIONS@

# The `CommunicationSystem` entity can call `ControlSystem`.
- name: traffic_light.CommunicationSystem
  env:
    VFS_NETWORK_BACKEND: client:kl.VfsNet
  connections:
  - target: traffic_light.ControlSystem
    id: control_system_connection_with_communication
  - target: kl.VfsNet
    id: kl.VfsNet   
@INIT_CommunicationSystem_ENTITY_CONNECTIONS+@

@INIT_EXTERNAL_ENTITIES@
